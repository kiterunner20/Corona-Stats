<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_marginLeft="@dimen/large_x"
        android:layout_marginRight="@dimen/large_x"
        android:paddingLeft="@dimen/large_x"
        android:paddingRight="@dimen/large_x"
        android:layout_marginTop="@dimen/small_x"
        android:layout_marginBottom="@dimen/small_x"
        android:paddingBottom="@dimen/small_x"
        android:paddingTop="@dimen/small_x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            style="@style/CardView.Light"
            android:id="@+id/cvcountrylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/medium_x"
            app:cardElevation="@dimen/medium_x">


            <RelativeLayout
                android:background="@color/davy_grey"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_countrydata"
                    style="@style/CovidCustomText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Afganistan" />

                <TextView
                    android:id="@+id/tv_total_cases_label"
                    style="@style/labeltext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_countrydata"
                    android:layout_alignParentStart="true"
                    android:text="@string/total_cases" />

                <TextView
                    android:id="@+id/tv_deaths_label"
                    style="@style/labeltext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_total_cases_label"
                    android:layout_alignParentStart="true"
                    android:text="@string/deaths" />

                <TextView
                    android:id="@+id/tv_total_cases"
                    style="@style/displaytext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_countrydata"
                    android:layout_alignParentRight="true"
                    tools:text="0000000" />

                <TextView
                    android:id="@+id/tv_deaths"
                    style="@style/displaytext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_total_cases"
                    android:layout_alignParentRight="true"
                    tools:text="0000000" />


                <TextView
                    android:id="@+id/tv_active_label"
                    style="@style/labeltextv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_deaths_label"
                    android:layout_alignParentStart="true"
                    android:padding="@dimen/large"
                    android:text="@string/active"
                    android:textColor="@color/red" />


                <TextView
                    android:id="@+id/tv_recovered_label"
                    style="@style/labeltextv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_deaths"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/large"
                    android:text="@string/recovered"
                    android:textColor="@color/green_light"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_active_label"
                    app:layout_constraintTop_toBottomOf="@+id/tv_deaths" />

                <TextView
                    android:id="@+id/tv_active"
                    style="@style/displaytext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_active_label"
                    app:layout_constraintEnd_toStartOf="@+id/tv_recovered"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_active_label"
                    tools:text="0000000" />

                <TextView
                    android:id="@+id/tv_recovered"
                    style="@style/displaytext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_recovered_label"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_active"
                    app:layout_constraintTop_toBottomOf="@+id/tv_recovered_label"
                    tools:text="0000000" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</layout>